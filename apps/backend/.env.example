# Database Configuration
# Replace with your actual database connection string
DATABASE_URL=postgresql://user:password@localhost:5432/financial_planner

# Authentication Secret
# Generate a secure random string (e.g., using `openssl rand -hex 32`)
BETTER_AUTH_SECRET=your_secure_random_string_here

# Server Configuration
PORT=3001
BETTER_AUTH_URL=http://localhost:3001
FRONTEND_URL=http://localhost:5173

# Social Authentication (Optional - Required for Google/Apple Login)
# Obtain these from Google Cloud Console
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Obtain these from Apple Developer Portal
APPLE_CLIENT_ID=your_apple_service_id_here
APPLE_CLIENT_SECRET=your_apple_client_secret_jwt_here
